<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ufabc.android.gorobot.MainActivity">

    <TextView
        android:id="@+id/statusMessage"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispositivos\n pareados"
        android:id="@+id/button_PairedDevices"
        android:layout_below="@+id/statusMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:onClick="searchPairedDevices"
        android:layout_toStartOf="@+id/button_DiscoveredDevices" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar descoberta\n de dispositivos"
        android:id="@+id/button_DiscoveredDevices"

        android:onClick="discoverDevices"
        android:layout_above="@+id/button_Visibility"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habilitar\nVisibilidade"
        android:id="@+id/button_Visibility"
        android:onClick="enableVisibility"

        android:layout_below="@+id/button_PairedDevices"
        android:layout_alignParentStart="true" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Esperar\nconexÃ£o"-->
        <!--android:id="@+id/button_WaitConnection"-->
        <!--android:onClick="waitConnection"-->
        <!--android:layout_below="@+id/button_PairedDevices"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_toStartOf="@+id/button_Visibility"-->
        <!--android:layout_alignEnd="@+id/button_PairedDevices" />-->


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_MessageBox"
        android:layout_above="@+id/reset"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:layout_toStartOf="@+id/button_DiscoveredDevices" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_MessageBox2"
        android:layout_alignTop="@+id/editText_MessageBox"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/statusMessage" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button_Send"
        android:onClick="sendMessage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/reset"
        android:layout_toEndOf="@+id/reset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="serial"
        android:id="@+id/textSpace"
        android:layout_above="@+id/editText_MessageBox"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_Visibility"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:id="@+id/reset"
        android:onClick="reset"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/statusMessage" />


</RelativeLayout>
